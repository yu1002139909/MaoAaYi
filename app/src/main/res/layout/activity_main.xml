<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activty.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="329pt"
        android:layout_weight="1"
        android:id="@+id/content"
        android:layout_gravity="center"
        >
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        >
        <LinearLayout
            android:id="@+id/lin_index"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_index"
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/menu_home_selected"
                />
            <TextView
                android:id="@+id/tv_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首页"
                android:gravity="center"
                android:textColor="#585858"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView

                android:layout_width="16dp"
                android:layout_height="19dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/menu_home"
                android:id="@+id/iv_order"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务订单"
                android:id="@+id/tv_order"
                android:gravity="center"
                android:textColor="#585858"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_day"
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/menu_richeng"
                />
            <TextView
                android:id="@+id/tv_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日程安排"
                android:gravity="center"
                android:textColor="#585858"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView

                android:layout_width="16dp"
                android:layout_height="19dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/menu_user"
                android:id="@+id/iv_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:gravity="center"
                android:id="@+id/tv_content"
                android:textColor="#585858"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>